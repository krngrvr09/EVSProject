<% provide(:title, 'Sign in') %>
<h1 class="sign_in_labels">Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, class: "sign_in_labels" %>
      <%= f.text_field :email, class: "sign_in_fields" %>

      <%= f.label :password, class: "sign_in_labels" %>
      <%= f.password_field :password, class: "sign_in_fields" %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary", id: "sign_in_account" %>
    <% end %>
    <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% else %>
        <%= link_to image_tag('/assets/google.png'), "/auth/google_oauth2", id: "sign_in" %>
        
        <%= link_to image_tag('/assets/facebook.jpeg'), "/auth/facebook", id: "sign_in" %>

        <%= link_to image_tag('/assets/twitter.png'), "/auth/twitter", id: "sign_in" %>
      <% end %>

  </div>
</div>
  <script>document.body.style.backgroundImage="url('/assets/blurred-autumn-1920x1080.jpg')";
  </script>
