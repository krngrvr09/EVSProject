<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
<%= link_to "Tags", tabs_path, :class => "button", :style=>'margin-left:590px;font-weight:800;font-size:16px;position: fixed;top: 60px;right: 200px; color: white;' %>
    <div class="span8">
      <h3>Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
    <script>document.body.style.backgroundImage="url('/assets/white1.png')";
  </script>

<% else %>
  <div class="center hero-unit" id="main_heading_div">
    <h1 id="main_heading">Welcome to Change Heroes</h1>
    
    <%= link_to "Sign Up", signup_path, id: "sign_up" %>
  </div>
  <script>document.body.style.backgroundImage="url('/assets/dark_forest.jpg')";
  </script>

<% end %>